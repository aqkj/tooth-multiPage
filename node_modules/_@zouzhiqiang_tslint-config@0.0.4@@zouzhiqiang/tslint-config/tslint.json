/**
 * tslint配置
 * @author xiaoqiang <465633678@qq.com>
 * @created 2019/07/30 17:32:14
 */
{
  "extends": [
      "tslint:recommended"
  ],
  "rules": {
    // 单引号
    "quotemark": [true, "single", "jsx-double"],
    // 不适用分号
    "semicolon": [true, "never"],
    // 导入排列
    "ordered-imports": [
      true,
      {
        // 导入资源排列
        "import-sources-order": "any",
        // 名称导入排列
        "named-imports-order": "any"
      }
    ],
    // 不使用console
    "no-console": [false],
    // 数组或对象尾部加逗号
    "trailing-comma": [true, { "multiline":"never", "singleline" : "never" }],
    // 箭头函数使用括号,单个参数不使用括号
    "arrow-parens": [true, "ban-single-arg-parens"],
    // 强制if for do while 使用大括号
    "curly": true,
    // forin使用hasOwnProperty过滤属性
    "forin": true,
    // 对象属性排序规则
    "object-literal-sort-keys": false,
    // 检查表达式同一行
    "one-line": [true, "check-whitespace", "check-open-brace", "check-catch", "check-finally", "check-else"],
    // 对象成员排列
    "member-ordering": false,
    // 强制显示声明成员
    "member-access": false,
    // 在文件底部需要换行符
    "eofline": true,
    // 禁止传统（非箭头）函数表达式（允许独立的函数声明）
    "only-arrow-functions": [true, "allow-declarations"],
    // 不允许在尾部增加空格
    "no-trailing-whitespace": true,
    // jsdocz注释规则
    "jsdoc-format": [true, "check-multiline-start"],
    // 空行2字符
    "indent": [true, "spaces", 2],
    // 禁止阴影变量声明(局部变量和外部变量相同时会提示)
    "no-shadowed-variable": true,
    "max-classes-per-file": false,
    "no-empty": [true, "allow-empty-functions"],
    "no-var-requires": false,
    "no-consecutive-blank-lines": false,
    // 检查各种错误的变量名称。
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    // Disallows unused expression statements.
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-debugger": false,
    // 强制变量声明
    "typedef": [true, 
      "call-signature",
      "arrow-call-signature",
      "parameter",
      "arrow-parameter",
      "property-declaration",
      "variable-declaration",
      "member-variable-declaration",
      "object-destructuring",
      "array-destructuring"
    ]
  }
}
